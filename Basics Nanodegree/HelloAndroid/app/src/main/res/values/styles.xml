<resources>

    <!-- Base application theme. -->
    <!--Theme For Udacity Self Car-->
    <style name="SelfCarStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/orange</item>
        <item name="colorPrimary">@color/black2</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <!--MyStyle For Every TextView in activity_main-->
    <style name="InfoStyle">
        <!--Font Family-->
        <item name="android:fontFamily">monospace</item>
        <!--Text Style-->
        <item name="android:textStyle">bold|italic</item>
        <!--Text Gravity-->
        <item name="android:gravity">center_vertical</item>
        <!--Set Weight 1-->
        <item name="android:layout_weight">@dimen/one</item>
        <!--match_parent layout_width-->
        <item name="android:layout_width">match_parent</item>
        <!--zero layout_height-->
        <item name="android:layout_height">@dimen/zero_dp</item>
        <!--TextColor-->
        <item name="android:textColor">@color/white</item>
        <!--16dp Padding left -->
        <item name="android:paddingLeft">@dimen/padding_16</item>
        <!--Color For Link Like Udacity website-->
        <item name="android:textColorLink">@color/diamondBlue</item>
    </style>

</resources>
