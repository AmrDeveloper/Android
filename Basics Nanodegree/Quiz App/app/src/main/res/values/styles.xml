<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blackWhite</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Style For Radio Button-->
    <style name="RadioStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blackWhite</item>
    </style>

    <!--Title TextView Style-->
    <style name="TitleTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">@dimen/padding10</item>
        <item name="android:textSize">@dimen/size20</item>
    </style>

    <!--Question TextView Style-->
    <style name="QuestionTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold|italic</item>
        <item name="android:padding">@dimen/padding10</item>
        <item name="android:textSize">@dimen/size17</item>
        <item name="android:text">@string/questionBody</item>
    </style>
</resources>
