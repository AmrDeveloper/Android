<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.beeradviser.amrdeveloper.beeradviser.MainActivity">

    <Spinner
        android:id = "@+id/colors"
        android:entries="@array/beer_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"/>

    <Button
        android:id = '@+id/find_beer'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colors"
        android:layout_alignLeft="@+id/colors"
        android:text="@string/find_beer"
        android:onClick="onClickFindBeer"
        />

    <TextView
        android:id="@+id/brands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_beer"
        android:layout_alignLeft="@+id/find_beer"
        android:text="@string/brands"
        />


</RelativeLayout>
