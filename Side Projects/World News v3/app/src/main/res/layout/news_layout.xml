<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newsCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/dimen5"
    card_view:cardElevation="@dimen/dimen5"
    card_view:cardUseCompatPadding="true"
    card_view:elevation="@dimen/dimen0">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dimen3">

        <TextView
            android:id="@+id/newsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen5"
            android:textSize="@dimen/dimen16_sp"
            tools:text="News Title" />

        <ImageView
            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen150"
            android:background="@color/gray"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen5"
            tools:text="News Description" />

        <TextView
            android:id="@+id/author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dimen5"
            tools:text="Authot" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/newsPillar"
                android:layout_width="@dimen/dimen0"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                tools:text="Section" />

            <TextView
                android:id="@+id/newsData"
                android:layout_width="@dimen/dimen0"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                tools:text="Date" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/shareButton"
            android:layout_width="@dimen/dimen30"
            android:layout_height="@dimen/dimen30"
            android:background="?android:selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@mipmap/share_icon" />
    </LinearLayout>
</android.support.v7.widget.CardView>